{
  "name": "@neuralsea/open-basket-network-extension",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/chrome": "^0.0.263",
    "archiver": "^6.0.2",
    "concurrently": "^9.1.0",
    "cypress": "^13.15.2",
    "ffmpeg-static": "^5.2.0",
    "sharp": "^0.34.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.11"
  },
  "scripts": {
    "test:extension:build": "node scripts/build-test-extension.mjs",
    "build": "node scripts/build-extension.mjs",
    "typecheck": "tsc -p tsconfig.json",
    "publish": "node scripts/publish.mjs",
    "preview:chrome": "node scripts/launch-chrome.mjs",
    "preview:screens": "node scripts/capture-screens.mjs",
    "store:assets": "node scripts/generate-store-assets.mjs",
    "personas:videos": "node scripts/persona-videos.mjs",
    "personas:mp4": "node scripts/persona-videos.mjs && node scripts/convert-persona-videos.mjs",
    "test:e2e": "npm run test:extension:build && playwright test && node scripts/convert-videos.mjs",
    "test:cypress": "npm run test:extension:build && concurrently -k -s first -n server,cypress \"node scripts/test-server.mjs\" \"env -u ELECTRON_RUN_AS_NODE cypress run --browser chrome\"",
    "test:cypress:open": "npm run test:extension:build && concurrently -k -s first -n server,cypress \"node scripts/test-server.mjs\" \"env -u ELECTRON_RUN_AS_NODE cypress open --browser chrome\""
  }
}
